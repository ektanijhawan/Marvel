<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ekta.marvel.ui.fragments.CharacterDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivCharacterDetail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tvCharacterDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:visibility="visible"
            android:textSize="6pt"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tvCharacterDetailDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:visibility="visible"
            android:textSize="6pt"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/tvlist"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="8pt"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCharacterDetailComics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
